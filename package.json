{
  "name": "smart-polling-platform",
  "version": "1.0.0",
  "private": true,
  "description": "A full-stack smart polling platform with conditional logic support",
  "keywords": [
    "nestjs",
    "react",
    "typescript",
    "polling",
    "conditional-logic",
    "websockets"
  ],
  "author": "Your Name",
  "license": "MIT",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "cd backend && pnpm run start:dev",
    "dev:frontend": "cd frontend && pnpm dev",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:backend": "cd backend && pnpm run build",
    "build:frontend": "cd frontend && pnpm run build",
    "test": "pnpm run test:backend && pnpm run test:frontend",
    "test:backend": "cd backend && pnpm run test",
    "test:frontend": "cd frontend && pnpm test",
    "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend:prod\"",
    "start:backend": "cd backend && pnpm run start:prod",
    "start:frontend:prod": "cd frontend && serve -s build",
    "install:all": "pnpm install && cd backend && pnpm install && cd ../frontend && pnpm install"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "serve": "^14.2.4"
  },
  "dependencies": {
    "pg": "^8.16.3"
  }
}
